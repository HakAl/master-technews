<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_gradient"
    android:paddingBottom="@dimen/activity_margin"
    android:paddingTop="@dimen/activity_margin">

    <com.andrewgiang.textspritzer.lib.SpritzerTextView
        android:id="@+id/tv_splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:textColor="@color/OffWhite"
        android:textSize="30sp"
        android:textStyle="bold"
        app:clickControls="true"
        android:paddingLeft="50dp"
        android:layout_marginBottom="@dimen/activity_margin"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/font_thirtysix"
        android:text="@string/app_name"
        android:gravity="center_vertical"
        android:textColor="@color/Green"
        android:drawableLeft="@drawable/ic_launcher"
        android:drawablePadding="@dimen/activity_eight"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_margin" />

</RelativeLayout><!-- From: file:/C:/Users/Angelo/Desktop/Tech_News/techNews/src/main/res/layout/activity_splash.xml -->